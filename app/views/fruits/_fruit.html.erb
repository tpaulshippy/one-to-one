<div id="<%= dom_id fruit %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= fruit.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Color:</strong>
    <%= fruit.color %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this fruit", fruit, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this fruit", edit_fruit_path(fruit), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
