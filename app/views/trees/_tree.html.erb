<div id="<%= dom_id tree %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= tree.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this tree", tree, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this tree", edit_tree_path(tree), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
